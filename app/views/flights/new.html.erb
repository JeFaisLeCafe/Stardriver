<div class="background-img">

  <div class="form">

    <div class="form-title">
      <h1>Create a flight</h1>
    </div>

    <div class="form-table">
      <%= simple_form_for @flight do |f| %>
        <%= f.input :destination %>
        <%= f.input :departure %>
        <%= f.input :description %>
        <%= f.association :rocket, collection: current_user.rockets, label_method: :model, include_blank: false %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, class: 'btn-form' %>
      <% end %>
    </div>

  </div>
</div>

<!-- USED TO HAVE html5: true WITHIN f.INPUT : DATE -->
