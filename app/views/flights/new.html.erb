<div class="medium-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%) 50%), url('https://source.unsplash.com/featured/?outerspace');">
  <div class="banner-content">
    <h1>Create a flight</h1>
  </div>
</div>


<div class="container">
<%= simple_form_for [@rocket, @flight] do |f| %>
  <%= f.input :destination %>
  <%= f.input :departure %>
  <%= f.input :description %>
  <%= f.input :date , as: :date, html5: true %>
  <%= f.submit %>
<% end %>
</div>
