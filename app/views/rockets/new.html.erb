<div class="medium-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('https://source.unsplash.com/featured/?outerspace');">
  <div class="banner-content">
    <h1>Create a big fu**ing rocket</h1>
  </div>
</div>


<div class="container">

<%= simple_form_for [@rocket] do |f| %>
  <%= f.input :capacity %>
  <%= f.input :model, collection: ["Xwing", "Apollo13", "Tesla"] %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
</div>
