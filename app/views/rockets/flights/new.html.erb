<div class="container">
  <div class="col-xs-12">
    <h1>Create a flight</h1>
    <%= simple_form_for [@rocket, @flight] do |f| %>
      <%= f.input :destination %>
      <%= f.input :departure %>
      <%= f.input :description %>
      <%= f.input :date , as: :date, html5: true %>
      <%= f.button :submit, class: 'btn btn-success' %>
    <% end %>
</div>
</div>
